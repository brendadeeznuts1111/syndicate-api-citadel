{
  "name": "syndicate-api-citadel",
  "version": "3.0.0",
  "description": "Bun 1.3-powered API Registry with OpenAPI auto-generation",
  "scripts": {
    "api:generate": "bun run scripts/api-gen.js",
    "api:watch": "bun run scripts/api-gen.js --watch",
    "api:lint": "bun run scripts/api-gen.js --lint",
    "api:client": "bun run scripts/api-gen.js --generate-client",
    "api:docs": "bun run scripts/api-gen.js --generate-docs",
    "api:json": "bun run scripts/api-gen.js --output-format json",
    "api:deploy-gateway": "bun run src/api/gateway.ts",
    "api:start-dev": "bun run scripts/api-gen.js --watch & bun run src/api/gateway.ts",
    "bun:yaml-import": "bun run scripts/api-gen.js --verbose",
    "bun:compression-test": "curl -H 'Accept-Encoding: zstd,gzip' http://localhost:3004/health",
    "bun:websocket-test": "websocat ws://localhost:3004/api/v3/ws/negotiate --header 'Sec-WebSocket-Protocol: json-rpc'",
    "stream:processor": "bun run scripts/websocket-processor.ts",
    "ai:inference-worker": "bun run src/ai/inference-worker.ts",
    "api:openapi": "bun run scripts/api-gen.js",
    "api:validate": "bun run scripts/validate-api.js",
    "debug:enhanced": "bun run scripts/source-map-consumer.js --auto-detect",
    "dev": "bun run index.ts",
    "dev:debug": "bun --inspect run index.ts",
    "build": "bun build index.ts",
    "test": "bun test --smol --coverage --bail=3",
    "test:watch": "bun test --watch --smol",
    "test:randomize": "bun test --randomize --seed 12345",
    "test:concurrent": "bun test --max-concurrency 10",
    "test:enhanced": "bun test --smol --coverage --bail=3 && bun test test/tz-matrix.test.ts test/memory.test.ts test/async-leak.test.ts test/sourcemap.test.ts",
    "test:matrix": "bun test test/tz-matrix.test.ts",
    "test:memory": "bun test test/memory.test.ts",
    "test:async": "bun test test/async-leak.test.ts",
    "test:sourcemap": "bun test test/sourcemap.test.ts",
    "test:runtime": "./scripts/enhanced-check.sh",
    "test:failing": "bun test --grep 'failing'",
    "bench": "bun run scripts/benchmark.js",
    "build:fullstack": "bun build --compile ./src/api/gateway.ts --outfile ./bin/citadel-gateway",
    "build:executable": "bun run scripts/api-gen.js --generate-client --generate-docs && bun build --compile ./src/api/gateway.ts --outfile ./bin/citadel-gateway",
    "smd:run": "bun run scripts/source-map-discovery.ts",
    "audit:traceability": "bun run scripts/audit-traceability.ts",
    "audit:ci": "bun run scripts/audit-traceability.ts --min 95 --strict",
    "api:gen": "bun run scripts/gen-openapi.ts",
    "api:index": "bun run scripts/build-routes-index.ts",
    "api:index:watch": "bun run scripts/build-routes-index.ts --watch",
    "api:grep": "rg --type ts 'export (const|function|async function)' --colors path:fg:cyan",
    "api:serve": "bun run src/api/gateway.ts",
    "api:serve:hot": "bun --hot run src/api/gateway.ts",
    "rules:validate:api": "bun run api:validate",
    "rules:pr:api": "bun run api:gen && bun run audit:ci && echo 'âœ… PR ready - OpenAPI synced and validated'",
    "sync:registry": "bun run scripts/auto-sync-registry.ts",
    "sync:watch": "bun run scripts/auto-sync-registry.ts --watch",
    "sync:push": "bun run scripts/auto-sync-registry.ts --push",
    "sync:dry-run": "bun run scripts/auto-sync-registry.ts --dry-run",
    "sync:force": "bun run scripts/auto-sync-registry.ts --force --push",
    "energy:harvest": "bun run scripts/energy-harvester.ts --analyze",
    "energy:optimize": "bun run scripts/energy-harvester.ts --optimize",
    "energy:benchmark": "bun run scripts/energy-harvester.ts --benchmark",
    "energy:flourish": "bun run scripts/energy-harvester.ts --optimize && bun run scripts/energy-harvester.ts --benchmark",
    "cf:build": "esbuild src/workers/index.ts --bundle --format=esm --outfile=dist/worker.js --platform=browser --target=es2021",
    "cf:deploy": "wrangler deploy",
    "cf:dev": "wrangler dev",
    "cf:login": "wrangler auth login",
    "cf:whoami": "wrangler whoami"
  },
  "dependencies": {
    "bun": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@cloudflare/workers-types": "^4.20241022.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.19.0"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
